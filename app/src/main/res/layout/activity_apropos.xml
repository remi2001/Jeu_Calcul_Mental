<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.AproposActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewGroupe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="Auteurs"
                android:textColor="#000000"
                android:textSize="22sp"
                tools:ignore="HardcodedText,NestedWeights" />

            <TextView
                android:id="@+id/textViewMembreR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="#FFFFFF"
                android:text="- OMETZ Rémi"
                android:textColor="#009688"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textViewMembreS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:background="#FFFFFF"
                android:text="- ZITOUNI Sébastian"
                android:textColor="#009688"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textViewLangue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="Langues"
                android:textColor="#000000"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textViewLangueFr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="#FFFFFF"
                android:text="- Français"
                android:textColor="#009688"
                android:textSize="11sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textViewLangueEn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:background="#FFFFFF"
                android:text="- Anglais"
                android:textColor="#009688"
                android:textSize="11sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textViewFonctionnalites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="Fonctionnalités supplémentaires"
                android:textColor="#000000"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/FonctJeuActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:background="#FFFFFF"
                android:text="JeuActivity :"
                android:textColor="#000000"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/FonctMoins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="#FFFFFF"
                android:text="- Le (-) dans le résultat ne peut etre mis par l'utilisateur qu'en premier élément sinon un message d'erreur s'affiche."
                android:textColor="#009688"
                android:textSize="10sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/FonctCalcul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="#FFFFFF"
                android:text="- Le calcul génère deux valeurs aléatoire qui sont initialement pour les additions et les soustractions entre 0 et 100 et pour les multiplications entre 0 et 10. Cependant plus on avance dans la jeu et plus la marge s'agrandit jusqu'a obtenir lors d'un score de 400 des nommbre aléatoires entre 0 et 4000 pour les additions et les souctractions et des nombres entre 0 et 50 pour les multiplications.L'opération est aussi choisi aléatoirement parmis les 3 possible (+/-/x).De plus, l'utilisatuer ne peut entrée une valeur supérieur a 99999 sous peine d'un message d'erreur, ce qui doit etre pris en compte lors de la création aléatoire des calcul."
                android:textColor="#009688"
                android:textSize="10sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/FonctVerif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="#FFFFFF"
                android:text="- Si l'on appuie sur ok pour vérifier son calcul tous d'abord on vérifie que le résultat n'est pas vide afin d'éviter les appuis accidentel par le joueur si celui si est vide on affiche a l'utilisateur qu'il doit saisir une valeur. Si le resultat n'est pas vide on vérifie si il est exact, si il est exact on incrémente le score de 10 et on génère un nouveau calcul. Sinon on décrémente le nombres d'erreures possibles de 1 et on affiche a l'utilisateur que le résultat est incorrect et qu'il peut réessayer."
                android:textColor="#009688"
                android:textSize="10sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/FonctErreurs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="#FFFFFF"
                android:text="- Si le resultat ne correspond a celui du calcul et que le nombre d'erreurs possibles est inférieur a 0 alors, si le score = 0 on affiche que l'on enregistre pas le calcul dans la Base de données et on invite le joueur a réessayer puis l'on génère un nouveau calcul en remettant le nombres d'erreurs possibles a 3. Si le score est supérieur a 0 l'on fini cette activité pour empecher le joueur d'y revenir et on lance l'activité du pseudo."
                android:textColor="#009688"
                android:textSize="10sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/FonctPseudoActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:background="#FFFFFF"
                android:text="PseudoActivity :"
                android:textColor="#000000"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/FonctEnregistrementPseudo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="#FFFFFF"
                android:text="- Si le pseudo n'est pas vide et que le joueur a appuyer sur le bouton valider alors on enregistre dans la base de données le score que le joueur vient de réaliser et le pseudo que le joueur vient d'entrée, et on termine cette page. Sinon affichage du message nous disant de compléter notre pseudo. De plus le pseudo ne peut dépasser 15 caractères et est du type PersonneName."
                android:textColor="#009688"
                android:textSize="10sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/FonctScoreActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:background="#FFFFFF"
                android:text="ScoreActivity :"
                android:textColor="#000000"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/FonctClassement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="#FFFFFF"
                android:text="- Trie de tous les enregistrement de la BDD par ordre décroissant des scores afin de réaliser le classement des 10 meilleurs joueur en prenant en compte que si on a deux fois le meme score, alors le premier a avoir effectuer et enregistrer ce score dans la Base de données sera devant au classement. De plus si il n'y a pas assez de données pour afficher les 10 meilleurs scores on affiche uniquement ceux présent dans la BDD."
                android:textColor="#009688"
                android:textSize="10sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/FonctDernierEnregistrement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="#FFFFFF"
                android:text="- Affichage du dernier enregistrement que l'on a réaliser dans la base de données qui permet de se comparer avec les meilleurs scores."
                android:textColor="#009688"
                android:textSize="10sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <Button
            android:id="@+id/bouttonRetourAccueilAPropos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00B7FF"
            android:text="@string/retour_a_l_accueil" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>